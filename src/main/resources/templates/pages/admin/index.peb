{# @pebvariable name="model" type="org.koil.admin.AdminIndexViewModel" #}
    {% extends "layouts/admin-layout" %}
    {% block title %} Home {% endblock %}

{% block content %}
<h1>Welcome to the admin panel</h1>
<p>You're logged in as {{ model.userName }}</p>

<table class="table is-striped">
    <thead>
    <tr>
        <th>Full Name</th>
        <th>Handle</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
            {% for account in model.accounts %}
        <tr data-test="account-row-{{ account.emailAddress }}">
            <td>{{ account.fullName }}</td>
            <td>{{ account.handle }}</td>
            <td>{{ account.emailAddress }}</td>
            <td>
                <form action="/admin/impersonation" method="POST">
                    {% include 'components/csrf-field' %}
                    <label>
                        <input type="hidden" name="username" value="{{ account.emailAddress }}">
                    </label>
                    <button type="submit" data-test="impersonate">Impersonate</button>
                </form>
            </td>
        </tr>
            {% endfor %}
    </tbody>
</table>
{% endblock %}
